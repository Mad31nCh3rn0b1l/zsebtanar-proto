{
  "name": "zsebtanar-firebase",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "0.16.2",
    "history": "^4.7.2",
    "markdown-it": "8.4.0",
    "markdown-it-imsize": "^2.0.1",
    "markdown-it-katex": "git+https://git@github.com/maxinteger/markdown-it-katex.git#2.1.0",
    "prop-types": "15.5.10",
    "ramda": "0.24.1",
    "react": "15.6.1",
    "react-dom": "15.6.1",
    "react-input-autosize": "^1.1.5",
    "react-redux": "^5.0.6",
    "react-router": "4.2.0",
    "react-router-dom": "4.2.2",
    "react-select": "^1.0.0-rc.5",
    "redux": "3.7.2",
    "redux-logger": "3.0.6",
    "redux-thunk": "2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^21.0.2",
    "babel-loader": "7.1.2",
    "babel-plugin-ramda": "^1.4.3",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "bootstrap": "^4.0.0-beta",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.0",
    "firebase-tools": "^3.12.0",
    "html-webpack-harddisk-plugin": "^0.1.0",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "jest": "^21.0.2",
    "lint-staged": "^4.2.2",
    "node-sass": "^4.5.3",
    "prettier": "^1.7.0",
    "react-test-renderer": "^15.6.1",
    "sass-loader": "^6.0.6",
    "shelljs": "^0.7.8",
    "source-map-loader": "0.2.1",
    "style-loader": "^0.18.2",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webpack": "^3.5.6",
    "webpack-dev-server": "^2.7.1"
  },
  "scripts": {
    "test": "jest test",
    "devstart": "npm run prebuild",
    "dev": "webpack-dev-server --progress --config ./build/webpack.config.js",
    "start": "npm run dev",
    "build-functions":
      "babel 'functions' --out-dir 'bin/functions' --presets=es2015 --copy-files --ignore 'node_modules'",
    "postbuild-functions": "cd bin/functions && npm --production=false install",
    "build-app": "webpack -p --config ./build/webpack.config.js",
    "prebuild": "node build/pre-build",
    "build": "NODE_ENV=production npm run build-app && npm run build-functions",
    "postbuild": "node build/post-build",
    "predeploy": "npm run test",
    "serv-functions": "npm run build-functions && firebase serve --only functions",
    "deploy": "npm run build && firebase deploy",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": ["prettier --write --single-quote --trailing-comma=none --no-semi false --print-width 100", "git add"],
    "*.{json,css}": ["prettier --write --print-width 120", "git add"]
  }
}
