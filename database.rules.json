{
  "rules": {
    // admin can read and write everything
    ".read": "root.child('users/'+auth.uid+'/role').val() === 1000",
    ".write": "root.child('users/'+auth.uid+'/role').val() === 1000",

    "users": {
      "$uid": {
        ".write": "$uid === auth.uid",
        ".read": "auth != null && auth.uid == $uid"
      }
    },

    "classifications":{
      ".read": true
    },

    "exercise": {
      "$exerciseId": {
        "private": {
          ".read": "root.child('users/'+auth.uid+'/role').val() > 0",
          ".write": "root.child('users/'+auth.uid+'/role').val() > 0"
        },
        "public": {
          ".read": true
        }
      }
    }
  }
}
